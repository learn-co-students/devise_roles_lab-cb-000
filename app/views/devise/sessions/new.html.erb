<h2>Log in</h2>

<%= render :partial => "layouts/messages" %>
<%= form_for(@user, url: user_session_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>


  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
