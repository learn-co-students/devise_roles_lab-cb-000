<h1>Your User Page</h1>

<h2>Your email:</h2>
   <%=@user.email%><br>
<h2>Your posts:</h2>
  <%@user.posts.each do |post| %>
  <li><%=post.content%></li><br><br>

<% if @user == current_user || current_user.vip? || current_user.admin? %>
        <a href="/posts/<%= "#{post.id}" %>/edit">Edit</a><br>
        <%= link_to "Create a new post", new_post_path%>
      <% end %>
      <%end%>
